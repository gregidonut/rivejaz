---
import styles from "./wallCard.module.css";
type Props = {
    date: Date;
};
const { date } = Astro.props;
---

<article class={styles.wallCard}>
    <time datetime={date.toISOString()}>
        {
            date.toLocaleDateString("en-US", {
                month: "long",
                day: "numeric",
                year: "numeric",
            })
        }
    </time>
    <slot />
</article>
